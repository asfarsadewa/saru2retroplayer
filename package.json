{
  "name": "saru2-retro-player",
  "version": "1.0.0",
  "description": "Saru2 Retro Player - A nostalgic VHS/CRT video player with authentic vintage effects",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "electron",
    "video",
    "player",
    "retro",
    "vhs",
    "crt"
  ],
  "author": "Saru2",
  "license": "MIT",
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "youtube-dl-exec": "^3.0.23"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.3"
  },
  "build": {
    "appId": "com.saru2.retroplayer",
    "productName": "Saru2 Retro Player",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/youtube-dl-exec/bin/yt-dlp.exe",
        "to": "bin/yt-dlp.exe",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "dir",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
